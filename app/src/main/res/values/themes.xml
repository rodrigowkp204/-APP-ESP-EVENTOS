<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LOGIN" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Customize your light theme here. -->

        <!-- COR PRINCIPAL DO TEMA CLARO -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/azul1</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- COR DOS TEXTOS POR DEFAULT -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

    <style name="Theme.LOGIN.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LOGIN.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LOGIN.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--<style name="Theme.LOGIN" parent="Base.Theme.LOGIN" /> -->

</resources>