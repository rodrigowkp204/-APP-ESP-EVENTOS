<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_claro"
        tools:context=".FormCadastroEventoExterno">

            <!-- Imagem de Logout -->
            <ImageView
                android:id="@+id/imageViewoff_ext"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginTop="10sp"
                android:contentDescription="@string/deslogar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@id/imageViewData_ext"
                app:layout_constraintStart_toStartOf="@id/imageViewData_ext"
                app:srcCompat="@drawable/logo_logout"
                tools:ignore="MissingConstraints"/>

            <!-- Imagem de Voltar -->
            <ImageView
                android:id="@+id/imageViewback_ext"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginTop="10sp"
                android:contentDescription="@string/voltar1"
                app:layout_constraintStart_toStartOf="@id/nomeTextInputLayoutFormCadastroEventoExterno"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_voltar"
                tools:ignore="MissingConstraints" />

            <!-- Visualização do texto de Agendamento -->
            <TextView
                android:id="@+id/title_agendamento_ext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/title_agendamento"
                android:textColor="@color/azul1"
                android:fontFamily="@font/signika_semibold"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewoff_ext"/>

            <TextView
                android:id="@+id/title_complemente_externo_ext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_agendamento_externo"
                android:textColor="@color/azul1"
                android:fontFamily="@font/signika_light"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_agendamento_ext"/>

            <!-- Campo de texto do Nome do Evento
            <EditText
                android:id="@+id/edit_nome_evento_ext"
                style="@style/Edit_Text_Agend"
                android:hint="@string/nomeEvento"
                android:inputType="text"
                android:autofillHints="Nome do Evento"
                app:layout_constraintTop_toBottomOf="@id/title_complemente_externo_ext"
                tools:ignore="MissingConstraints"/>
             -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nomeTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/nomeEvento"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/title_complemente_externo_ext"
            style="@style/CustomTextInputLayoutLoginRedefinir">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_nome_evento_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableEnd="@drawable/ic_user_name"
                android:textColor="@color/black"
                android:autofillHints="name"
                android:background="@drawable/layout_login_edits"/>

        </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de texto do Setor Responsável
            <EditText
                android:id="@+id/edit_setor_resp_ext"
                style="@style/Edit_Text_Agend"
                android:hint="@string/setorResp"
                android:inputType="text"
                android:autofillHints="Setor Responsável"
                app:layout_constraintTop_toBottomOf="@id/nomeTextInputLayoutFormCadastroEventoExterno"
                tools:ignore="MissingConstraints" />
             -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/setorTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/setorResp"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/nomeTextInputLayoutFormCadastroEventoExterno"
            style="@style/CustomTextInputLayoutLoginRedefinir">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_setor_resp_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableEnd="@drawable/ic_coord"
                android:textColor="@color/black"
                android:autofillHints="name"
                android:background="@drawable/layout_login_edits"
                />

        </com.google.android.material.textfield.TextInputLayout>


            <!-- Campo de texto do Número de Participantes
            <EditText
                android:id="@+id/edit_numeros_participantes_ext"
                style="@style/Edit_Text_Agend"
                android:hint="@string/numPart"
                android:inputType="number"
                android:autofillHints="Número de Participantes"
                app:layout_constraintTop_toBottomOf="@id/setorTextInputLayoutFormCadastroEventoExterno"
                tools:ignore="MissingConstraints" />
           -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/participantesTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/numPart"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/setorTextInputLayoutFormCadastroEventoExterno"
            style="@style/CustomTextInputLayoutLoginRedefinir">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_numeros_participantes_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:background="@drawable/layout_login_edits"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_numer_part"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/title_cadastrese" />

        </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de texto da Data Inicial
            <EditText
                android:id="@+id/edit_data_ext"
                style="@style/Edit_Text_Data"
                android:hint="@string/data"
                android:inputType="text"
                android:autofillHints="Data"
                app:layout_constraintTop_toBottomOf="@id/participantesTextInputLayoutFormCadastroEventoExterno"
                tools:ignore="MissingConstraints" />
                -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/datainicioTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/data"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/participantesTextInputLayoutFormCadastroEventoExterno"
            style="@style/CustomTextInputLayoutFormCadastroData">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_data_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:autofillHints="name"
                android:textColor="@color/black"
                android:background="@drawable/layout_login_edits"
                app:layout_constraintTop_toBottomOf="@id/title_cadastrese"/>

        </com.google.android.material.textfield.TextInputLayout>

            <!-- Imagem do Calendário  Data Inicial -->
        <ImageView
            android:id="@+id/imageViewData_ext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@string/dataicone"
            app:layout_constraintBottom_toBottomOf="@+id/datainicioTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintStart_toEndOf="@id/datainicioTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toTopOf="@+id/datainicioTextInputLayoutFormCadastroEventoExterno"
            app:srcCompat="@drawable/logo_calendario_form"
            tools:ignore="MissingConstraints" />

            <!-- Campo de texto da Data Final
            <EditText
                android:id="@+id/edit_data_final_ext"
                style="@style/Edit_Text_Data"
                android:hint="@string/datafinal"
                android:inputType="text"
                android:autofillHints="Data"
                app:layout_constraintTop_toBottomOf="@id/edit_data_ext"
                tools:ignore="MissingConstraints" />
                -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/datafinalTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/datafinal"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/datainicioTextInputLayoutFormCadastroEventoExterno"
            style="@style/CustomTextInputLayoutFormCadastroData">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_data_final_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:autofillHints="name"
                android:textColor="@color/black"
                android:background="@drawable/layout_login_edits"
                app:layout_constraintTop_toBottomOf="@id/title_cadastrese"/>

        </com.google.android.material.textfield.TextInputLayout>

            <!-- Imagem do Calendário Data Final-->
        <ImageView
            android:id="@+id/imageViewDataFinal_ext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@string/dataicone"
            app:layout_constraintBottom_toBottomOf="@+id/datafinalTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintStart_toEndOf="@id/datafinalTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toTopOf="@+id/datafinalTextInputLayoutFormCadastroEventoExterno"
            app:srcCompat="@drawable/logo_calendario_form"
            tools:ignore="MissingConstraints" />

            <!-- Campo de texto da Hora Inicial
            <EditText
                android:id="@+id/edit_horas_ext"
                style="@style/Edit_Text_Data"
                android:hint="@string/horarioInicial"
                android:inputType="text"
                android:autofillHints="Horário"
                app:layout_constraintTop_toBottomOf="@id/edit_data_final_ext"
                tools:ignore="MissingConstraints" />
            -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/horainicialTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/horarioInicial"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/datafinalTextInputLayoutFormCadastroEventoExterno"
            style="@style/CustomTextInputLayoutFormCadastroData">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_horas_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:autofillHints="name"
                android:textColor="@color/black"
                android:background="@drawable/layout_login_edits"
                app:layout_constraintTop_toBottomOf="@id/title_cadastrese"/>
        </com.google.android.material.textfield.TextInputLayout>

            <!-- Imagem do Horário -->
        <ImageView
            android:id="@+id/imageViewHora_ext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@string/horarioicone"
            app:layout_constraintBottom_toBottomOf="@+id/horainicialTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintStart_toEndOf="@id/horainicialTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toTopOf="@+id/horainicialTextInputLayoutFormCadastroEventoExterno"
            app:srcCompat="@drawable/logo_hora_form"
            tools:ignore="MissingConstraints" />

            <!-- Campo de texto da Hora Final
            <EditText
                android:id="@+id/edit_horas_final_ext"
                style="@style/Edit_Text_Data"
                android:hint="@string/horarioFinal"
                android:inputType="text"
                android:autofillHints="Horário"
                app:layout_constraintTop_toBottomOf="@id/edit_horas_ext"
                tools:ignore="MissingConstraints" />
            -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/horafinalTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/horarioFinal"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/horainicialTextInputLayoutFormCadastroEventoExterno"
            style="@style/CustomTextInputLayoutFormCadastroData">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_horas_final_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:autofillHints="name"
                android:textColor="@color/black"
                android:background="@drawable/layout_login_edits"
                app:layout_constraintTop_toBottomOf="@id/title_cadastrese"/>

        </com.google.android.material.textfield.TextInputLayout>

            <!-- Imagem do Horário -->
        <ImageView
            android:id="@+id/imageViewHoraFinal_ext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@string/horarioicone"
            app:layout_constraintBottom_toBottomOf="@+id/horafinalTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintStart_toEndOf="@id/horafinalTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toTopOf="@+id/horafinalTextInputLayoutFormCadastroEventoExterno"
            app:srcCompat="@drawable/logo_hora_form"
            tools:ignore="MissingConstraints" />

            <!-- Campo de texto do Local do Evento
            <EditText
                android:id="@+id/edit_local_externo_ext"
                style="@style/Edit_Text_Agend"
                android:hint="@string/select"
                android:inputType="text"
                android:layout_marginTop="16dp"
                android:autofillHints="Local do Evento"
                app:layout_constraintTop_toBottomOf="@id/horafinalTextInputLayoutFormCadastroEventoExterno"
                tools:ignore="MissingConstraints" />
-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/localTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/select"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/horafinalTextInputLayoutFormCadastroEventoExterno"
            style="@style/CustomTextInputLayoutLoginRedefinir">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_local_externo_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:background="@drawable/layout_login_edits"
                android:drawableEnd="@drawable/ic_localidade"
                android:textColor="@color/black"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/title_cadastrese" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title_equipamentos_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/signika_semibold"
            android:text="@string/equipamentos"
            android:textColor="@color/azul1"
            app:layout_constraintStart_toStartOf="@+id/localTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toBottomOf="@id/localTextInputLayoutFormCadastroEventoExterno" />

        <CheckBox
            android:id="@+id/checkBoxSimEventoExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sim"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/title_equipamentos_ext"
            app:layout_constraintTop_toBottomOf="@id/title_equipamentos_ext" />

        <CheckBox
            android:id="@+id/checkBoxNãoEventoExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:text="@string/nao"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/title_equipamentos_ext"
            app:layout_constraintTop_toBottomOf="@id/title_equipamentos_ext" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quaisTextInputLayoutFormCadastroEventoExterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/quais"
            android:textColorHint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/checkBoxSimEventoExterno"
            style="@style/CustomTextInputLayoutLoginRedefinir">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_quais_equip_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:visibility="gone"
                android:textColor="@color/black"
                android:autofillHints="name"
                android:background="@drawable/layout_login_edits"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title_transmissao_gravacao_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/signika_semibold"
            android:text="@string/transmissao"
            android:textColor="@color/azul1"
            app:layout_constraintStart_toStartOf="@+id/quaisTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toBottomOf="@id/quaisTextInputLayoutFormCadastroEventoExterno" />

        <CheckBox
            android:id="@+id/checkBoxSimEventoTransmissaoExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sim"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/title_transmissao_gravacao_ext"
            app:layout_constraintTop_toBottomOf="@id/title_transmissao_gravacao_ext" />

        <CheckBox
            android:id="@+id/checkBoxNãoEventoTransmissaoExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:text="@string/nao"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/title_equipamentos_ext"
            app:layout_constraintTop_toBottomOf="@id/title_transmissao_gravacao_ext" />

        <CheckBox
            android:id="@+id/checkBoxtransmissaoExterno"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:text="@string/transmissaocheck"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/checkBoxSimEventoTransmissaoExterno"
            app:layout_constraintTop_toBottomOf="@id/checkBoxSimEventoTransmissaoExterno" />

        <CheckBox
            android:id="@+id/checkBoxgravacaoExterno"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-50dp"
            android:visibility="gone"
            android:text="@string/gravacao"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/title_equipamentos_ext"
            app:layout_constraintTop_toBottomOf="@id/checkBoxSimEventoTransmissaoExterno" />

        <CheckBox
            android:id="@+id/checkBoxAmbosExterno"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:visibility="gone"
            android:text="@string/ambos"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/localTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toBottomOf="@id/checkBoxSimEventoTransmissaoExterno" />

        <TextView
            android:id="@+id/title_modalidade_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/signika_semibold"
            android:text="@string/modalidade"
            android:textColor="@color/azul1"
            app:layout_constraintStart_toStartOf="@+id/checkBoxtransmissaoExterno"
            app:layout_constraintTop_toBottomOf="@id/checkBoxtransmissaoExterno" />

        <CheckBox
            android:id="@+id/checkBoxPresencialExterno"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/presencial"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/title_modalidade_ext"
            app:layout_constraintTop_toBottomOf="@id/title_modalidade_ext" />

        <CheckBox
            android:id="@+id/checkBoxHibridoExterno"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-20dp"
            android:text="@string/hibrido"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/title_equipamentos_ext"
            app:layout_constraintTop_toBottomOf="@id/title_modalidade_ext" />

        <CheckBox
            android:id="@+id/checkBoxonlineExterno"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:text="@string/online"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/localTextInputLayoutFormCadastroEventoExterno"
            app:layout_constraintTop_toBottomOf="@id/title_modalidade_ext" />

        <TextView
            android:id="@+id/title_link_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/signika_semibold"
            android:text="@string/link"
            android:textColor="@color/azul1"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/checkBoxtransmissaoExterno"
            app:layout_constraintTop_toBottomOf="@id/checkBoxPresencialExterno" />

        <CheckBox
            android:id="@+id/checkBoxSimEventoLinkExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sim"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/title_link_ext"
            app:layout_constraintTop_toBottomOf="@id/title_link_ext" />

        <CheckBox
            android:id="@+id/checkBoxNãoEventoLinkExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:text="@string/nao"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/title_equipamentos_ext"
            app:layout_constraintTop_toBottomOf="@id/title_link_ext" />

        <TextView
            android:id="@+id/title_material_grafico_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/signika_semibold"
            android:text="@string/materialgrafico"
            android:textColor="@color/azul1"
            app:layout_constraintStart_toStartOf="@+id/checkBoxtransmissaoExterno"
            app:layout_constraintTop_toBottomOf="@id/checkBoxSimEventoLinkExterno" />

        <CheckBox
            android:id="@+id/checkBoxSimMaterialGraficoExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sim"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/title_material_grafico_ext"
            app:layout_constraintTop_toBottomOf="@id/title_material_grafico_ext" />

        <CheckBox
            android:id="@+id/checkBoxNãoMaterialGraficoExterno"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:text="@string/nao"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/title_equipamentos_ext"
            app:layout_constraintTop_toBottomOf="@id/title_material_grafico_ext" />

        <TextView
            android:id="@+id/title_solicitacao_material_grafico_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/signika_semibold"
            android:text="@string/formsLink"
            android:visibility="gone"
            android:textColor="@color/azul1"
            app:layout_constraintStart_toStartOf="@+id/checkBoxtransmissaoExterno"
            app:layout_constraintTop_toBottomOf="@id/checkBoxSimMaterialGraficoExterno" />

        <TextView
            android:id="@+id/link_solicitacao_material_grafico_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/signika_semibold"
            android:text="@string/linkformsgraf"
            android:visibility="gone"
            android:textColor="@color/azul1"
            app:layout_constraintStart_toStartOf="@+id/checkBoxtransmissaoExterno"
            app:layout_constraintTop_toBottomOf="@id/title_solicitacao_material_grafico_ext" />

        <androidx.core.widget.NestedScrollView
                android:id="@+id/scrol2_ext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/link_solicitacao_material_grafico_ext">

                <!-- Campo de texto de Descrição de Atividades -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_desc_atv_ext"
                    style="@style/Edit_Text_Obs_Desc"
                    android:hint="@string/descricaoAtv"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:gravity="start"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:maxLength="200"
                    android:lines="5"
                    android:autofillHints="Descrição da Atividade"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollHorizontally="false"
                    android:fadeScrollbars="false"
                    tools:ignore="MissingConstraints" />

            </androidx.core.widget.NestedScrollView>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrol3_ext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/scrol2_ext">

                <!-- Campo de texto de Observações -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_obs_ext"
                    style="@style/Edit_Text_Obs_Desc"
                    android:hint="@string/observacoes"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:gravity="start"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:maxLength="200"
                    android:lines="5"
                    android:autofillHints="Observações"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    android:scrollHorizontally="false"
                    android:fadeScrollbars="false"
                    tools:ignore="MissingConstraints" />
            </androidx.core.widget.NestedScrollView>

            <!-- Botão do cadastrar evento -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_cadastrar_ext"
                style="@style/Button2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/cadastrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scrol3_ext"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>