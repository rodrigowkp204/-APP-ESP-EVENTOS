<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="20sp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imglocal"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="start"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:src="@drawable/bg_ambiente_externo"
            app:shapeAppearanceOverlay="@style/roundimageview"/>

        <TextView
            android:id="@+id/tagExpiradoExt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Expirado"
            android:textColor="@color/white"
            android:background="@color/red"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tagAovivoExt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Em Andamento"
            android:textColor="@color/white"
            android:background="@color/verde"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tagEmBreveExt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Em Breve"
            android:textColor="@color/white"
            android:background="@color/azul1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtnomeext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="122dp"
            android:layout_marginBottom="12dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="25sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txtdescricaoext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/titledata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="10dp"
            android:text="@string/data2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdatainicialext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/titledatafinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="10dp"
            android:text="@string/data3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdatafinalext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="293dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/titlehorarioinicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="10dp"
            android:text="@string/horario2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txthorarioinicialext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/titlehorariofinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            android:text="@string/horario3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txthorariofinalext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/titlelocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="10dp"
            android:text="@string/local2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtlocalext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>