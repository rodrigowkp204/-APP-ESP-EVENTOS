<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cellDayText"
        android:text="1"
        android:fontFamily="@font/signika_light"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.25"/>

    <View
        android:id="@+id/eventIndicator"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/circle_indicator"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cellDayText"
        app:layout_constraintLeft_toLeftOf="@+id/cellDayText"
        app:layout_constraintRight_toRightOf="@+id/cellDayText"
        app:layout_constraintVertical_bias="0.50"
        android:layout_marginTop="2dp"
        android:visibility="gone"/> <!-- Inicialmente invisível -->

    <View
        android:id="@+id/eventExtIndicator"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/circle_indicator_ext"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cellDayText"
        app:layout_constraintLeft_toLeftOf="@+id/cellDayText"
        app:layout_constraintRight_toRightOf="@+id/cellDayText"
        app:layout_constraintVertical_bias="0.50"
        android:layout_marginTop="2dp"
        android:visibility="gone"/> <!-- Inicialmente invisível -->



</androidx.constraintlayout.widget.ConstraintLayout>