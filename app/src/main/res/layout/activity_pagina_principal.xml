<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_claro"
        tools:context=".PaginaPrincipal">

        <ImageView
            android:id="@+id/imageViewConfigAdmin"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="30sp"
            android:contentDescription="@string/deslogar"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_configuracoes_admin"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textNomeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_light"
            android:text="@string/bemvindo"
            android:textColor="@color/azul1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewoff" />

        <TextView
            android:id="@+id/textnomeUsuario1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/signika_light"
            android:textStyle="bold"
            android:text=""
            android:textColor="@color/azul1"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textNomeUsuario"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageViewoff"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="30sp"
            android:contentDescription="@string/deslogar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_logout"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="@id/textnomeUsuario1"
            app:layout_constraintTop_toBottomOf="@id/textnomeUsuario1"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>